<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:scrollbars="vertical"
    android:background="@color/yellow">

    <TextView
        android:id="@+id/or1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="------------------Tạo tài khoản mới------------------"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnfb" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="210dp"
        android:layout_height="154dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="CỬA HÀNG TIỆN LỢI"
        android:textColor="@color/blue"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="MINISTOP"
        android:textColor="@color/blue"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/txtusername"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/decorate_text_login"
        android:drawableLeft="@drawable/ic_phone"
        android:hint=" Số điện thoại"
        android:inputType="phone"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/txtpassword"
        android:layout_width="match_parent"

        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/decorate_text_login"
        android:drawableLeft="@drawable/password"
        android:hint=" Mật khẩu"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtusername" />

    <CheckBox
        android:id="@+id/chkSave"
        android:layout_width="185dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:text="Lưu mật khẩu"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtpassword" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:backgroundTint="@color/blue"
        android:onClick="HandleLogin"
        android:text="Đăng nhập"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chkSave" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:backgroundTint="@color/blue"
        android:onClick="HandleLogin"
        android:text="Đăng ký"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/or1" />

    <TextView
        android:id="@+id/or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="---------Đăng nhập bằng mạng xã hội---------"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

    <Button
        android:id="@+id/btnfb"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/blue_deep"
        android:drawableLeft="@drawable/ic_logofb"
        android:onClick="HandleLogin"
        android:textColor="@color/white"
        android:text="FACEBOOK"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/or" />

    <Button
        android:id="@+id/btngg"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/black"
        android:drawableLeft="@drawable/ic_logogg"
        android:onClick="HandleLogin"
        android:textColor="@color/white"
        android:text="GOOGLE"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnfb"
        app:layout_constraintTop_toBottomOf="@+id/or" />

</androidx.constraintlayout.widget.ConstraintLayout>