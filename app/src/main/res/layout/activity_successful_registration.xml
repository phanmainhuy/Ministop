<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuccessfulRegistrationActivity"
    android:background="@color/yellow"
    android:padding="10dp">

    <TextView
        android:id="@+id/lbl_SucessfulRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:text="Chúc mừng, bạn đã là thành viên cửa hàng tiện lợi Ministop"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnOKSucessful"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="@color/blue"
        android:text="Quay lại"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:onClick="HandleSuccessfulRegistration"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>