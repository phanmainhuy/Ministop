<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp">


    <TextView
        android:id="@+id/tv_Cart_tensp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên sản phẩm"
        android:layout_marginLeft="20dp"
        android:textColor="@color/blue"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_Cart_hinhsp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_Cart_hinhsp"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/no_image_found" />

    <TextView
        android:id="@+id/tv_Cart_giasp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:text="29000"
        android:textColor="@color/red_price"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/img_Cart_hinhsp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="10dp"
        android:text="đồng"
        android:textColor="@color/red_price"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/tv_Cart_giasp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_Cart_soluong_1dong"
        android:layout_width="30dp"
        android:layout_height="23dp"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="2dp"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/btn_Cart_AddNumber"
        app:layout_constraintTop_toBottomOf="@+id/tv_Cart_giasp" />

    <Button
        android:id="@+id/btn_Cart_AddNumber"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/white"
        android:gravity="top|center"
        android:layout_marginLeft="20dp"
        android:padding="0dp"
        android:paddingTop="0dp"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/img_Cart_hinhsp"
        app:layout_constraintTop_toBottomOf="@+id/tv_Cart_giasp" />

    <Button
        android:id="@+id/btn_Cart_MinNumber"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/white"
        android:gravity="top|center"
        android:padding="0dp"
        android:paddingTop="0dp"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/txt_Cart_soluong_1dong"
        app:layout_constraintTop_toBottomOf="@+id/tv_Cart_giasp" />

</androidx.constraintlayout.widget.ConstraintLayout>